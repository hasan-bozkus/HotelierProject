@model List<RoleAssignViewModel>
@{
    ViewData["Title"] = "AssignRole";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<h1>Rol Atama Sayfası</h1>

<form method="post">
    @for (int i = 0; i < Model.Count; i++)
    {
        <div class="form-check">
            <input type="hidden" asp-for="@Model[i].Id"/>
            <input type="hidden" asp-for="@Model[i].Name"/>
            <input type="checkbox" asp-for="@Model[i].RoleExist" class="form-check-input" />
            <label class="form-check-label" for="@Model[i].RoleExist">@Model[i].Name</label>
        </div>
    }
    <br />
    <button class="btn mb-0 btn-rounded btn-outline-success">Kullanıcı için Rolleri Kaydet</button>
</form>

