@model HotelProject.WebUI.Dtos.ServiceDto.CreateServiceDto
@{
    ViewData["Title"] = "AddService";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}



<form method="post">
    <label>Hizmet Adı</label>
    <input type="text" class="form-control" asp-for="Title" />
    <span asp-validation-for="Title" class="text-danger"></span>
    <br />
    <label>Hizmet İkonu</label>
    <input type="text" class="form-control" asp-for="ServiceIcon" />
    <span asp-validation-for="ServiceIcon" class="text-danger"></span>
    <br />
    <label>Açıklama</label>
    <input type="text" class="form-control" asp-for="Description" />
    <span asp-validation-for="Description" class="text-danger"></span>
    <br />
    <button class="btn mb-1 btn-rounded btn-outline-primary">Kaydet</button>
</form>


